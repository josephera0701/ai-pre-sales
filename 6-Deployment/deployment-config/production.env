# Production Environment Configuration
# AWS Cost Estimation Platform - Sagesoft Solutions Inc.

# Environment
ENVIRONMENT=prod
NODE_ENV=production
AWS_REGION=us-east-1

# Application URLs
API_URL=https://api.aws-cost-estimation.sagesoft.com
FRONTEND_URL=https://aws-cost-estimation.sagesoft.com
CORS_ORIGINS=https://aws-cost-estimation.sagesoft.com,https://www.aws-cost-estimation.sagesoft.com

# Authentication (Cognito)
COGNITO_USER_POOL_ID=us-east-1_PROD123ABC
COGNITO_CLIENT_ID=prod456def789ghi012
COGNITO_REGION=us-east-1

# Database (DynamoDB)
MAIN_TABLE=aws-cost-platform-prod
PRICING_TABLE=aws-pricing-data-prod
DYNAMODB_REGION=us-east-1

# Storage (S3)
DOCUMENTS_BUCKET=aws-cost-estimation-documents-prod-123456789
UPLOADS_BUCKET=aws-cost-estimation-uploads-prod-123456789
FRONTEND_BUCKET=aws-cost-estimation-frontend-prod-123456789

# Lambda Configuration
LAMBDA_MEMORY_SIZE=1536
LAMBDA_TIMEOUT=60
LAMBDA_RESERVED_CONCURRENCY=50

# API Gateway Configuration
API_THROTTLE_RATE=1000
API_BURST_LIMIT=2000
API_CACHE_ENABLED=true
API_CACHE_TTL=300

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_XRAY=true
METRICS_NAMESPACE=AWSCostPlatform/Production
CLOUDWATCH_LOG_RETENTION=30

# Security
KMS_KEY_ID=arn:aws:kms:us-east-1:123456789:key/prod-key-id
ENCRYPTION_ENABLED=true
WAF_ENABLED=true

# Performance
ENABLE_PROVISIONED_CONCURRENCY=true
PROVISIONED_CONCURRENCY_UNITS=5
ENABLE_API_CACHING=true

# Business Configuration
DEFAULT_CURRENCY=USD
DEFAULT_REGION=us-east-1
BUFFER_PERCENTAGE=10
SUPPORT_PLAN_PERCENTAGE=10

# External Services
PRICING_API_ENDPOINT=https://pricing.us-east-1.amazonaws.com
PRICING_UPDATE_SCHEDULE=0 2 * * *

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
POINT_IN_TIME_RECOVERY=true

# Alerts and Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/PROD/WEBHOOK/URL
EMAIL_ALERTS=devops@sagesoft.com,support@sagesoft.com
SMS_ALERTS=+1234567890

# Rate Limiting
AUTH_RATE_LIMIT=10
API_RATE_LIMIT=100
UPLOAD_RATE_LIMIT=5

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=.xlsx,.xls
UPLOAD_TIMEOUT=300

# Document Generation
PDF_TIMEOUT=30
WORD_TIMEOUT=30
EXCEL_TIMEOUT=30
DOCUMENT_RETENTION_DAYS=365

# Cache Configuration
REDIS_ENABLED=false
MEMORY_CACHE_TTL=3600
PRICING_CACHE_TTL=86400

# Feature Flags
ENABLE_EXCEL_UPLOAD=true
ENABLE_DOCUMENT_GENERATION=true
ENABLE_COST_COMPARISON=true
ENABLE_MOBILE_UI=false  # Disabled until mobile improvements complete

# Compliance
GDPR_COMPLIANCE=true
SOC2_COMPLIANCE=true
DATA_RETENTION_DAYS=2555
AUDIT_LOGGING=true