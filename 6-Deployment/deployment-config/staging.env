# Staging Environment Configuration
# AWS Cost Estimation Platform - Sagesoft Solutions Inc.

# Environment
ENVIRONMENT=staging
NODE_ENV=development
AWS_REGION=us-east-1

# Application URLs
API_URL=https://api-staging.aws-cost-estimation.sagesoft.com
FRONTEND_URL=https://staging.aws-cost-estimation.sagesoft.com
CORS_ORIGINS=https://staging.aws-cost-estimation.sagesoft.com,http://localhost:3000

# Authentication (Cognito)
COGNITO_USER_POOL_ID=us-east-1_STAGING123
COGNITO_CLIENT_ID=staging456def789
COGNITO_REGION=us-east-1

# Database (DynamoDB)
MAIN_TABLE=aws-cost-platform-staging
PRICING_TABLE=aws-pricing-data-staging
DYNAMODB_REGION=us-east-1

# Storage (S3)
DOCUMENTS_BUCKET=aws-cost-estimation-documents-staging-123456789
UPLOADS_BUCKET=aws-cost-estimation-uploads-staging-123456789
FRONTEND_BUCKET=aws-cost-estimation-frontend-staging-123456789

# Lambda Configuration
LAMBDA_MEMORY_SIZE=1024
LAMBDA_TIMEOUT=60
LAMBDA_RESERVED_CONCURRENCY=20

# API Gateway Configuration
API_THROTTLE_RATE=500
API_BURST_LIMIT=1000
API_CACHE_ENABLED=false
API_CACHE_TTL=60

# Monitoring and Logging
LOG_LEVEL=debug
ENABLE_XRAY=true
METRICS_NAMESPACE=AWSCostPlatform/Staging
CLOUDWATCH_LOG_RETENTION=7

# Security
KMS_KEY_ID=arn:aws:kms:us-east-1:123456789:key/staging-key-id
ENCRYPTION_ENABLED=true
WAF_ENABLED=false

# Performance
ENABLE_PROVISIONED_CONCURRENCY=false
PROVISIONED_CONCURRENCY_UNITS=0
ENABLE_API_CACHING=false

# Business Configuration
DEFAULT_CURRENCY=USD
DEFAULT_REGION=us-east-1
BUFFER_PERCENTAGE=10
SUPPORT_PLAN_PERCENTAGE=10

# External Services
PRICING_API_ENDPOINT=https://pricing.us-east-1.amazonaws.com
PRICING_UPDATE_SCHEDULE=0 6 * * *

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
POINT_IN_TIME_RECOVERY=true

# Alerts and Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/STAGING/WEBHOOK/URL
EMAIL_ALERTS=dev-team@sagesoft.com
SMS_ALERTS=

# Rate Limiting
AUTH_RATE_LIMIT=20
API_RATE_LIMIT=200
UPLOAD_RATE_LIMIT=10

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=.xlsx,.xls
UPLOAD_TIMEOUT=300

# Document Generation
PDF_TIMEOUT=60
WORD_TIMEOUT=60
EXCEL_TIMEOUT=60
DOCUMENT_RETENTION_DAYS=30

# Cache Configuration
REDIS_ENABLED=false
MEMORY_CACHE_TTL=1800
PRICING_CACHE_TTL=43200

# Feature Flags
ENABLE_EXCEL_UPLOAD=true
ENABLE_DOCUMENT_GENERATION=true
ENABLE_COST_COMPARISON=true
ENABLE_MOBILE_UI=true  # Enabled for testing

# Compliance
GDPR_COMPLIANCE=true
SOC2_COMPLIANCE=false
DATA_RETENTION_DAYS=90
AUDIT_LOGGING=true